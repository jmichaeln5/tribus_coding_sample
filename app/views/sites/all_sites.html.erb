<div class="pb-4 container">
  <%= link_to 'Add Site', new_user_site_path(current_user), class:"btn btn-success btn-block" if current_user %>
</div>

<% @sites.each do |site| %>
  <div class="container pb-4">
      <div class="float-right">
        Added by: <%= link_to site.user.email, user_sites_path(site.user_id) %>
      </div>
      <br>
      <div class="text-center p-4 border-t-2 border-r-2 border-b-2 border-l-4 border-gray-200">
        <div>
          <img src="<%= site.thumbnail_link %>" alt="site-thumbnail" class="center">
        </div>
        <div style="font-size:120%;" >
           <%= link_to site.title, url_for(site.link), :target => "_blank" %>
        </div>

        <div>
          <%= site.description %>
        </div>
        <br>
        <div>
          <strong>Keywords:</strong>
          <br>
          <%= site.keyword_list %>
        </div>
        <br>
        <div>
          <%= link_to 'View', site, class:"btn btn-success" %>
        </div>
      </div>
  </div>
<% end %>
