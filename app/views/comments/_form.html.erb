<%= form_for [commentable, Comment.new] do |form|%>
  <% form.hidden_field :user_id %>
  <%= form.text_area :body, class:"form-control", placeholder:"Add a Comment" %>
  <br>
  <div class="actions btn btn-success">
    <%= button_tag(type: 'submit') do %>
      Submit
    <% end %>
  </div>
  <% end %>
