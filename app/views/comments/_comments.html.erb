<div>
  <div style="font-size:150%;">
    <%=  commentable.comments.count %> <%= "#{commentable.comments.size == 1 ? 'Comment' : 'Comments'}"%>
  </div>
  <% commentable.comments.each do |comment| %>
    <div class="text-center p-4 border-t-2 border-r-2 border-b-2 border-l-4 border-gray-200">
      <br>
      <div style="font-size:150%;">
        <%= comment.body %>
        <div class="text-xs">
          <%= comment.user.email %>
        </div>

      </div>

      <% if current_user %>
      <br>
      <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-danger" if comment.user == current_user %>
      <% end %>
    </div>
    <br>
  <% end %>
</div>
